{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:default",
    {
      "identifier": "fs:allow-app-read",
      "allow": [
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-app-write",
      "allow": [
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-read-file",
    "fs:allow-write-file",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "binaries/ipfs",
          "sidecar": true,
          "args": true
        }
      ]
    },
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://**"
        },
        {
          "url": "https://**"
        },
        {
          "url": "http://localhost:**"
        },
        {
          "url": "http://127.0.0.1:**"
        }
      ]
    },
    "os:default"
  ]
}